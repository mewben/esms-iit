<div class="page-header">
	<h3><i class="fa fa-angle-right"></i> Report of Refunds
		<small>Retrieves refund details</small>
	</h3>
</div>

<div class="row">
	<div class="col-md-3">
		<div class="panel panel-default">
			<div class="panel-heading">Report from</div>
			<div class="panel-body">
				<form role="form" {{action 'preview' on="submit"}}>
					<div class="form-group">
						<label>Date From:</label>
						{{view 'date-picker' name='datefrom' value=datefrom}}
					</div>
					<div class="form-group">
						<label>Date To:</label>
						{{view 'date-picker' name='dateto' value=dateto}}
					</div>
					<div class="form-group text-center">
						<hr>
						{{submit-spin saveText='View Report' disabled=disb isProc=g.isProc btnClass='btn-info btn-block'}}
						{{button-spin action='export' saveText='Export details to Excel' disabled=disb isProc=g.isProc btnClass="btn-warning btn-block"}}
						<a {{bind-attr href="tlink"}} target="_blank" class="btn btn-link">Download Template Here.</a>
					</div>
				</form>
			</div>
		</div>	
	</div>
	<div class="col-md-9">
	{{#if res}}
		{{to-print to='print.refunds' p=params act='toprint'}}
		<hr>
		<h3>Summary of Refunds</h3>
		{{partial 'reports/sumrefund'}}
	{{/if}}
	</div>
</div>