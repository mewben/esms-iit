<div class="page-header">
	<h3><i class="fa fa-angle-right"></i> Summary of Billing
		<small>Retrieves all the probable collection of the selected semester.</small>
	</h3>
</div>

<div class="row">
	<div class="col-md-3">
		<form role="form" {{action 'retrieve' on='submit'}}>
			<div class="form-group">
				<label>School-Year:</label>
				{{input value=sy placeholder="SY" class="form-control" autofocus="autofocus"}}
			</div>
			<div class="form-group">
				<label>Sem:</label>
				<div class="input-group">
					{{input value=sem class="form-control" placeholder="Sem"}}
					<span class="input-group-btn">
						{{submit-spin saveText='Retrieve' disabled=disb isProc=g.isProc}}
					</span>
				</div>
			</div>
		</form>
	</div>
	<div class="col-md-9">
	{{#if data}}
		{{to-print to='print.sumbilling' p=params act='toprint'}}
		<hr>
		{{partial 'reports/sumbilling'}}
		<hr>
		{{to-print to='print.sumbilling' p=sy p2=sem act='toprint'}}
	{{/if}}
	</div>
</div>