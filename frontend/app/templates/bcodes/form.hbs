<div class="row">
	<div class="col-sm-10">
		<div class="panel panel-default">
			<div class="panel-heading">Bcode Info</div>
			<div class="panel-body">
				<form role="form">
					<div class="form-group">
						<label class="control-label">Code</label>
						{{input value=bcode class="form-control"}}
					</div>
					<div class="form-group">
						<label class="control-label">Description</label>
						{{input value=desc class="form-control"}}
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="col-sm-2">
		<button {{action 'save'}} class="btn btn-block btn-info">Save</button>
		{{#if id}}
			<button {{action 'delete' this}} class="btn btn-block btn-danger">Delete</button>
		{{/if}}
		<hr>
		{{#link-to 'bcodes.index' class="btn btn-block btn-default"}}Cancel{{/link-to}}
	</div>
</div>