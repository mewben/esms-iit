<div class="page-header">
	<h3><i class="fa fa-angle-right"></i> Report of Collections
		<small>Retrieves collection details</small>
	</h3>
</div>

<div class="panel panel-default">
	<div class="panel-heading">Report from</div>
	<div class="panel-body">
		<form role="form" {{action 'export' on="submit"}}>
			<div class="form-group">
				<label>Get collection from:</label>
				{{view Em.Select
					content=bcodes
					optionValuePath="content.v"
					optionLabelPath="content.name"
					value=bcode
					class="form-control"}}
			</div>
			<div class="form-group">
				<label>Date From:</label>
				{{input value=datefrom class="form-control" placeholder="YYYY-MM-DD"}}
			</div>
			<div class="form-group">
				<label>Date To:</label>
				{{input value=dateto class="form-control" placeholder="YYYY-MM-DD"}}
			</div>
			<div class="form-group">
				<label>Fund:</label>
				{{view Em.Select
					content=funds
					optionValuePath="content.v"
					optionLabelPath="content.name"
					value=fund
					class="form-control"}}
			</div>
			<div class="form-group text-center">
				<hr>
				{{submit-spin saveText='Export to Excel' disabled=disb isProc=g.isProc btnClass="btn-warning btn-lg"}}
				<a {{bind-attr href="tlink"}} target="_blank" class="btn btn-link">Download Template Here.</a>
			</div>
		</form>
	</div>
</div>